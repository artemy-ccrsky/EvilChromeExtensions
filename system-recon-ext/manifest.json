{
  "name": "System Recon",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "history",
    "storage",
    "system.cpu",
    "system.memory",
    "system.storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
